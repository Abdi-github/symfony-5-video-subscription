
{% extends 'base.html.twig' %}

{% block bs %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

{% endblock %}

{% block title %}Register{% endblock %}

{% block body %}
<body class="body">



    <div class="sign section--bg" data-bg="{{asset('img/section/section.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-12">
                                             <h2 class=" text-center mt-4 text-uppercase" style="color : #f9ab00" >Register</h2>


               


                    <div class="sign__content">

                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}

                        

                        {{ form_start(registrationForm, {'attr' : {'class' : 'sign__form' }} ) }}

                            
                            <a href="{{path('home')}}" class="sign__logo">
								<img src="{{asset('img/logos.png')}}" alt="">
							</a>



                            <div class="sign__group">
                                {{form_widget(registrationForm.first_name, {'attr': {'class' : 'sign__input', 'placeholder' : 'First Name'}})}}
                            </div>

                            <div class="sign__group">
                                {{form_widget(registrationForm.last_name, {'attr': {'class' : 'sign__input', 'placeholder' : 'Last Name'}})}}
                            </div>

                            <div class="sign__group">
                                 {{form_widget(registrationForm.email, {'attr': {'class' : 'sign__input', 'placeholder' : 'Email'}})}}
                            </div>

                            <div class="sign__group">
                                 {{form_widget(registrationForm.password.first, {'attr': {'class' : 'sign__input', 'placeholder' : 'Password'}})}}
                                 <div class="invalid-feedback">
                                    {{form_errors(registrationForm.password.first)}}
                                 </div> 
                            </div>

                            <div class="sign__group">
                                 {{form_widget(registrationForm.password.second, {'attr': {'class' : 'sign__input', 'placeholder' : 'Confirm Password'}})}}
                                 <div class="invalid-feedback">
                                    {{form_errors(registrationForm.password.second)}}
                                 </div> 
                            </div>

                         

                          

                            <button class="sign__btn" type="submit">Sign Up</button>
                        {{ form_end(registrationForm) }}

                 </div>
                </div>
            </div>
        </div>
    </div>


</body>    
{% endblock %}
