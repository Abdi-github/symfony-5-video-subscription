{% extends 'base.html.twig' %}

{# {% block title %}Log in!{% endblock %} #}

{% block bs %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}


{% block body %}

<body class="body">

    <div class="sign section--bg" data-bg="{{asset('img/section/section.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class=" text-center mt-4 text-uppercase" style="color : #f9ab00">Reset your password</h2>
                    <div class="sign__content">

                    

                    {{ form_start(resetForm, {'attr' : {'class' : 'sign__form' }}) }}
                        <div class="sign__group">
                            {{form_widget(resetForm.plainPassword.first, {'attr': {'class' : 'sign__input', 'placeholder' : 'Enter New Password'}})}}
                        </div>
                        <div class="sign__group">
                            {{form_widget(resetForm.plainPassword.second, {'attr': {'class' : 'sign__input', 'placeholder' : 'Confirm New Password'}})}}
                        </div>
                        <button class="sign__btn" type="submit">Reset password</button>
                    {{ form_end(resetForm) }}

                     </div>
                </div>
            </div>
        </div>
    </div>


</body>
{% endblock %}
